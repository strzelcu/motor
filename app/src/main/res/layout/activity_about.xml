<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tomaszstrzelecki.motor.AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/downarrow"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_arrow_downward_black_24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:id="@+id/app_logo"
                android:src="@drawable/web_hi_res_512"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textSize="48sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_website"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_website_href"
                        android:autoLink="web"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_policy_website"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_policy_website_href"
                        android:autoLink="web"
                        android:textSize="16sp"
                        android:layout_marginStart="36dp"
                        android:layout_marginEnd="36dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_sugestion_description"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_sugestion_mail"
                        android:autoLink="email"
                        android:textSize="16sp"
                        android:layout_marginStart="36dp"
                        android:layout_marginEnd="36dp"
                        android:layout_marginBottom="16dp"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_thanks"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dziękuję mojej promotorce Pani dr inż. Annie Zatwarnickiej za ogromną pomoc i motywowanie mnie do ukończenia mojej pracy inżynierskiej, której tematem jest niniejsza aplikacja."
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dziękuję grupie motocyklowej Opolskie Knury, moim bliskim znajomym i rodzinie za pomoc i zaangażowanie przy rozwoju aplikacji."
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/changelog"
                        android:textAlignment="center"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="### Wersja 0.2 ###"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Wstępna obsługa akcelerometru i żyroskopu"
                            android:textAlignment="center"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Wysyłanie AutoSMS dla połączeń nieodebranych i SMSów"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Wyświetlenie statystyk trasy"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Export trasy do pliku KML"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Wyświetlanie trasy na mapach Google"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Zapisanie trasy w bazie danych SQLite"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="### Wersja 0.1 ###"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Wyświetlanie danych GPS na ekranie"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*** Obsługa odbiornika GPS"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>